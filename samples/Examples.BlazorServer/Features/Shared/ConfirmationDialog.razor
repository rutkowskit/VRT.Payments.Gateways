<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.QuestionMark" Class="mr-3 mb-n1" />
            Please confirm
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>
            @((MarkupString) Message)
        </MudText>      
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" StartIcon="@Icons.Material.Outlined.Check" IconColor="@Color.Success"> 
            Tak 
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public string Message { get; set; } = "Are you sure ?";

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;

    void Submit() => MudDialog.Close(DialogResult.Ok("Ok"));
    void Cancel() => MudDialog.Cancel();
}